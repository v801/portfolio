// FOLIO (PORTFOLIO)

.portfolio
  max-width 900px
  margin 24px auto 0
  padding 0 24px
  h1
    padding 0 4px
    @media $tablet
      font-size 1.750rem
  li
    margin-bottom 80px
  .intro
    margin-bottom 60px
    padding 0 4px
    font-size 1.125rem
    @media $tablet
      font-size 1rem
  .info
    margin-top 20px
    padding 0 20px
    text-align center
    p
      no-margin()
    @media $tablet
      h4
        font-size 1.125rem
  @media $phone
    padding 0 12px

.browser-window
  position relative
  display block
  width 100%
  height 478px
  border-radius 5px
  text-align left
  .top-bar
    height 30px
    background $black
    border-radius 5px 5px 0 0
    border-top 1px solid $gray-dark
    border-right 1px solid $gray-dark
    border-left 1px solid $gray-dark
    border-bottom 1px solid $gray-dark
  .circle
    display inline-block
    height 10px
    width 10px
    border-radius 50%
    background-color #909095
  .circles
    margin 3px 11px
  .content
    no-margin()
    position relative
    display block
    width 100%
    min-height 448px
    border-radius 0 0 5px 5px
    border-right 1px solid $gray-dark
    border-left 1px solid $gray-dark
    border-bottom 1px solid $gray-dark
    [lazy=loading]
      &:after
        @extend $background-spinner
  .content-bg
    position relative
    width 100%
    min-height 448px
    border-radius 0 0 5px 5px
    background-color $black
    background-repeat no-repeat
    background-size cover
    background-position center top
    transition all 0.5s ease
    z-index 1
