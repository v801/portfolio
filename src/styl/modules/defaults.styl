// DEFAULTS

*
  box-sizing border-box
  font-smoothing antialiased
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility
  selection($black, $orange)

html
  height 100%
  font-size 16px

body
  position relative
  height 100%
  background-color $black-dark
  color $gray
  font-family $monospace
  font-weight 400
  letter-spacing -0.5px
  line-height 1.45

h1
h2
h3
h4
  margin 1.414em 0 0.5em
  font-weight inherit
  line-height 1.2

h1
  margin-top 0
  font-size 3.157rem

h2
  font-size 2.369rem

h3
  font-size 1.777rem

h4
  font-size 1.333rem

ul
li
p
pre
  no-margin()
  no-padding()

li
  list-style-type none

p
  margin-bottom 1.3em

a
  color $purple-dark
  &:hover
    color $purple
